<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/basket_image"
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:background="@drawable/rounded_corner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cat_4" />

        <TextView
            android:id="@+id/basket_name"
            style="@style/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="13dp"
            android:text="прикосновнение"
            android:textAllCaps="true"
            app:layout_constraintStart_toEndOf="@+id/basket_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/basket_price"
            style="@style/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="11dp"
            android:text="8 900 c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/basket_image" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_delete" />

        <TextView
            android:id="@+id/basket_discount"
            style="@style/flowers_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="-15%"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/basket_price"
            app:layout_constraintStart_toEndOf="@+id/basket_price"
            app:layout_constraintTop_toTopOf="@+id/basket_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>