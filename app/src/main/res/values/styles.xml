<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="login_header">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="phone_number">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="big_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="header">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header_center">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header_bold">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="flowers_list_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="red_text">
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@drawable/rounded_corner</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="small_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="comments_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="comments_text_bold">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="small_text_bold">
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="small_text_caps">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/tinos_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tiny_text">
        <item name="fontFamily">@font/tinos</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">299dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="black_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="white_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="gray_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/tinos</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <!--        <item name="cornerFamily">rounded</item>-->
        <item name="cornerSize">50%</item>
    </style>
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/my_background_color</item>
    </style>

    <style name="RecyclerViewDefault">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>
</resources>